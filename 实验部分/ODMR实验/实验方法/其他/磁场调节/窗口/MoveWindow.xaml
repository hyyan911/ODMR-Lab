<Window x:Class="ODMR_Lab.实验部分.ODMR实验.实验方法.其他.MoveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        mc:Ignorable="d"
            Title="垂直磁场计算" Height="268.507" Width="540.25" WindowChrome.IsHitTestVisibleInChrome="False" BorderThickness="2" ResizeMode="NoResize" WindowStyle="None" Background="#FF1F1F1F" BorderBrush="#FF0075DA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="垂直磁场计算" x:Name="WindowTitle" IsHitTestVisible="False" Grid.ColumnSpan="3" FontWeight="ExtraBold" Background="#FF383838" Foreground="#FFFAFAFA"/>
        <Controls:DecoratedButton Name="CloseBtn" Grid.Column="2" IconMargin="7" TextAreaRatio="0" Grid.Row="0" Click="Close" FontWeight="Thin" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/close.png"/>
        <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="50,30,50,30">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="位移台X:" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="0" Margin="3" Grid.Column="1" FontSize="10" Grid.ColumnSpan="1" x:Name="X" IsReadOnly="False" BorderThickness="0" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="位移台Y:" Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="0" Margin="2" Grid.Column="3" Grid.ColumnSpan="1" x:Name="Y" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="位移台Z:" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="1" Margin="3" Grid.Column="1" Grid.ColumnSpan="1" x:Name="Z" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="角度位移台:" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="1" Margin="2" Grid.Column="3" Grid.ColumnSpan="1" x:Name="Angle" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Controls:DecoratedButton Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="4" Margin="5" Click="Move" Text="移动" FontWeight="Thin" FontSize="10" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
            <Label Content="旋转中心点X:" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="3" Margin="2" Grid.Column="1" Grid.ColumnSpan="1" Name="RotX" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="旋转中心点Y:" Grid.Row="3" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="3" Margin="2" Grid.Column="3" Grid.ColumnSpan="1" Name="RotY" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="旋转角度:" Grid.Row="4" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="10"/>
            <TextBox Grid.Row="4" Margin="2" Grid.Column="1" Grid.ColumnSpan="1" Name="RotAngle" IsReadOnly="False" BorderThickness="0" FontSize="10" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Controls:DecoratedButton Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="4" Margin="5" Click="MoveAngle" Text="移动" FontWeight="Thin" FontSize="10" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        </Grid>
    </Grid>
</Window>
