<Grid x:Class="ODMR_Lab.实验部分.ODMR实验.控件.TabViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls;assembly=Controls"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800" SizeChanged="Grid_SizeChanged">
    <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="35"/>
    </Grid.ColumnDefinitions>
    <local:PopButton Name="PopList" Grid.Row="1" Grid.Column="1" PreviewPopOpen="PopButton_PreviewPopOpen" Grid.RowSpan="2" TextAreaRatio="0" Margin="2" IconMargin="7" FontWeight="Thin" Background="#FF2E2E2E" Foreground="#FFFAFAFA" MoveInColor="#FF1792E5" PressedColor="#FF0088D9" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/list.png">
        <local:PopButton.PopContent>
            <local:AutoScrollViewer  Name="PopScroll" Width="300" MaxHeight="400" BorderThickness="2" HorizontalScrollBarVisibility="Hidden" BorderBrush="#FF999999" >
                <local:AutoScrollViewer.Content>
                    <WrapPanel Name="TabStorePanel" Orientation="Vertical" Width="300" Background="#FF2E2E2E"/>
                </local:AutoScrollViewer.Content>
            </local:AutoScrollViewer>
        </local:PopButton.PopContent>
    </local:PopButton>
    <local:DecoratedButton Name="ButtonTemplate" Visibility="Collapsed" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" TextAreaRatio="0" Margin="2" IconMargin="7" FontWeight="Thin" Background="#00000000" Foreground="#FFFAFAFA" MoveInColor="#FF64BAF4" PressedColor="#FF0088D9" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/list.png"/>
    <Label Name="LabelTemplate" Visibility="Collapsed" Background="#00000000" Foreground="#FFFAFAFA" FontSize="10" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    <StackPanel Name="TabPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Row="0" Grid.Column="0"/>
</Grid>
