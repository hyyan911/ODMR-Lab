<odmr_lab:ExpPageBase  xmlns:odmr_lab="clr-namespace:ODMR_Lab" x:Class="ODMR_Lab.自定义实验.DisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ODMR_Lab.温度监测部分" xmlns:chart="clr-namespace:Controls.Charts;assembly=Controls" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" 
      xmlns:image="clr-namespace:ODMR_Lab.基本控件"
      d:DesignHeight="600" d:DesignWidth="800"
      >
    <Grid.RowDefinitions>
        <RowDefinition Height="40"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <TextBlock Name="TextBlockTemplate" Visibility="Hidden" Foreground="White" Text="1111" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="12"/>
    <control:ComboBox Name="ComboBoxTemplate" Visibility="Hidden" Background="#FF2E2E2E" FontSize="12" TextAreaRatio="0.9" ImagePlace="Right" IconMargin="3" Foreground="White" PressedForeground="White" MoveInForeground="White" MoveInColor="#FF4D4D4D" PressedColor="#FF1B6BDD" IconSource="/图片资源/downArrow.png"/>
    <TextBox Name="TextBoxTemplate" Background="#FF2E2E2E" Visibility="Hidden" Foreground="White" BorderThickness="0" FontSize="12" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="{x:Null}" CaretBrush="White"/>
    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Foreground="White" Content="输入参数"/>
    <control:AutoScrollViewer Margin="5" Name="InputScroll" Grid.RowSpan="2" Grid.Row="1" Background="#FF2E2E2E">
        <control:AutoScrollViewer.Content>
            <Grid Name="InputPanel" Width="{Binding ElementName=InputScroll, Path=ActualWidth}">
            </Grid>
        </control:AutoScrollViewer.Content>
    </control:AutoScrollViewer>
    <control:AutoScrollViewer Margin="5" Name="DeviceScroll" Grid.Row="1" Grid.Column="1" Background="#FF2E2E2E">
        <control:AutoScrollViewer.Content>
            <Grid Name="DevicePanel" Width="{Binding ElementName=DeviceScroll, Path=ActualWidth}">
            </Grid>
        </control:AutoScrollViewer.Content>
    </control:AutoScrollViewer>
    <Grid Grid.Row="2" Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <control:DecoratedButton Name="StartBtn" TextAreaRatio="0" Margin="5" IconMargin="4" FontWeight="Thin" FontSize="14" Width="100" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/play.png"/>
            <control:DecoratedButton Name="StopBtn" TextAreaRatio="0" Margin="5" FontWeight="Thin" IconMargin="0" FontSize="14" Width="100" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/stop.png" Grid.Column="2"/>
            <control:DecoratedButton Name="ResumeBtn" TextAreaRatio="0" Margin="5" IconMargin="0" FontWeight="Thin" FontSize="14" Width="100" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/pause.png" Grid.Column="1"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Foreground="White" Content="开始时间:" Grid.ColumnSpan="1"/>
            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Foreground="White" Content="结束时间:" Grid.Row="1" Grid.ColumnSpan="1"/>
            <Label Name="StartTime" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Foreground="White"  Grid.Column="1" Grid.ColumnSpan="1"/>
            <Label Name="EndTime" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Foreground="White"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1"/>
        </Grid>
        <ProgressBar Name="Progress" Grid.Row="2" Margin="10" Background="#FF2E2E2E" BorderBrush="{x:Null}"/>
        <Label Name="ProgressContent" Grid.Row="3" Margin="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Foreground="White"/>
        <control:DecoratedButton Name="ResultBtn" TextAreaRatio="1" Grid.Row="4" Margin="10" Text="查看结果" IconMargin="0" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" Grid.Column="1"/>
    </Grid>
    <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" FontSize="15" Foreground="White" Content="实验设备列表"/>
</odmr_lab:ExpPageBase>
