<Window x:Class="ODMR_Lab.磁场调节.ScanInitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ODMR_Lab.磁场调节" xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        mc:Ignorable="d"
            Title="磁场定位初始参数设置" Height="314" Width="600" WindowChrome.IsHitTestVisibleInChrome="False" BorderThickness="2" ResizeMode="NoResize" WindowStyle="None" Background="#FF1F1F1F" BorderBrush="#FF0075DA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="   定位流程初始参数设置" x:Name="WindowTitle" IsHitTestVisible="False" Grid.ColumnSpan="3" FontWeight="ExtraBold" Background="#FF383838" Foreground="#FFFAFAFA"/>
        <Controls:DecoratedButton Grid.Column="2" IconMargin="7" TextAreaRatio="0" Grid.Row="0" Click="Close" FontWeight="Thin" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/close.png"/>
        <Grid Grid.Row="1" Grid.ColumnSpan="5" Margin="50,30,50,30">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="X扫描范围:" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <TextBox Grid.Row="0" Margin="6" Grid.Column="1" Name="XLoText" BorderThickness="0" FontSize="15" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="—" Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <TextBox Grid.Row="0" Margin="6" Grid.Column="3" Name="XHiText" BorderThickness="0" FontSize="15" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="Y扫描范围:" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <Label Content="—" Grid.Row="1" Grid.Column="2" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <TextBox Grid.Row="1" Margin="6,6,6,6" Grid.Column="1" x:Name="YLoText" BorderThickness="0" FontSize="15" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <TextBox Grid.Row="1" Margin="6,6,6,6" Grid.Column="4" x:Name="YHiText" BorderThickness="0" FontSize="15" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="Z扫描位置:" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <TextBox Grid.Row="2" Margin="6,6,6,6" Grid.Column="1" x:Name="ZPlaneText" BorderThickness="0" FontSize="15" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Label Content="D值:" Grid.Row="2" Grid.Column="2" HorizontalContentAlignment="Center" FontSize="13" FontWeight="Bold" VerticalContentAlignment="Center" Foreground="#FFFAFAFA"/>
            <TextBox Grid.Row="2" Margin="5" Grid.Column="3" x:Name="DText" BorderThickness="0" FontSize="15" Text="2870" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FF383838" Foreground="#FFF0F0F0" CaretBrush="White"/>
            <Controls:DecoratedButton Grid.Column="0" Text="开始定位流程" Grid.Row="5" Margin="10" Click="Apply" Grid.ColumnSpan="4" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        </Grid>
    </Grid>
</Window>
