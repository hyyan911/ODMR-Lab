<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls"
        x:Class="ODMR_Lab.Windows.MessageWindow"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="213" Width="470"  BorderThickness="2" WindowStyle="None" ResizeMode="NoResize" Background="#FF1F1F1F" MouseMove="Window_MouseMove" BorderBrush="#FF0075DA" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Label Height="30" Width="466" Background="#FF383838" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBlock Name="Caption" Text="    提示" FontSize="14" Foreground="#FFFAFAFA" Canvas.Left="21" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="7"/>
        <Controls:DecoratedButton Name="CloseBtn" Grid.Row="0" Grid.Column="1" Click="Close" Text="×" FontWeight="Thin" FontSize="20" Width="50" Height="30" Canvas.Left="416" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"  Name="Region" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Width="346">
            <Image Source="/图片资源/information.png" Canvas.Left="47" Canvas.Top="52" Height="60" Width="60"/>
            <Controls:AutoScrollViewer Name="Information" Width="266" MinHeight="100">
                <Controls:AutoScrollViewer.Content>
                    <WrapPanel Width="{Binding ElementName=Information,Path=ActualWidth}" MinHeight="100">
                        <TextBlock  x:Name="Content" MinHeight="100" FontSize="14" Width="246" Text="提示111111111111111111111111111111111111111111111111111111111111111111111111111" Foreground="#FFFAFAFA" Canvas.Left="126" Canvas.Top="67" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Image x:Name="Image" MaxWidth="200" MaxHeight="200" Visibility="Collapsed" HorizontalAlignment="Left"/>
                    </WrapPanel>
                </Controls:AutoScrollViewer.Content>
            </Controls:AutoScrollViewer>
        </StackPanel>
        <StackPanel Margin="5" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="#FF1F1F1F">
            <Controls:DecoratedButton Name="OK" Margin="20,0,20,0" Click="OKClick" Text="确定" FontSize="14" Width="74" Height="33" Background="#FF2E2E2E" Foreground="LightGray" MoveInColor="#FF4D4D4D" PressedColor="#FF424242" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
            <Controls:DecoratedButton Name="Yes" Margin="20,0,20,0" Click="YesClick" Text="是" FontSize="14" Width="74" Height="33" Background="#FF2E2E2E" Foreground="White" MoveInColor="#FF4D4D4D" PressedColor="#FF424242" MoveInForeground="White" PressedForeground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
            <Controls:DecoratedButton Name="No" Click="NoClick" Margin="20,0,20,0" Text="否" FontSize="14" Width="74" Height="33" Background="#FF2E2E2E" Foreground="White" MoveInColor="#FF4D4D4D" PressedColor="#FF424242" MoveInForeground="White" PressedForeground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
            <Controls:DecoratedButton Name="Cancel" Click="CancelClick" Margin="20,0,20,0" Text="取消" FontSize="14" Width="74" Height="33" Background="#FF2E2E2E" Foreground="White" MoveInColor="#FF4D4D4D" PressedColor="#FF424242" MoveInForeground="White" PressedForeground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>
