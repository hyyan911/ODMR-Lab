<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:温度监控程序.Windows"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls" x:Class="温度监控程序.Windows.ConnectWindow"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="370" Width="492"  BorderThickness="2" WindowStyle="None" ResizeMode="NoResize" Background="#FF1F1F1F" MouseMove="Window_MouseMove" BorderBrush="#FF0075DA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Content="    选择设备" Grid.Row="0" Height="30" Width="594" Background="#FF383838" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="LightGray"/>
        <Controls:DecoratedButton Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Click="Close" Text="×" FontWeight="Thin" FontSize="20" Canvas.Left="594" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Controls:DecoratedButton Name="COMBtn" Grid.Row="0" Width="100" Margin="2" VerticalAlignment="Stretch" Grid.Column="1" Click="COMView" Text="COM" FontWeight="Bold" FontSize="18"  Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
            <Controls:DecoratedButton Name="USBBtn" Grid.Row="0" Width="100" Margin="2"  VerticalAlignment="Stretch" Grid.Column="1" Click="USBView" Text="USB" FontWeight="Bold" FontSize="18"  Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
            <Controls:DecoratedButton Name="TCPBtn" Grid.Row="0" Width="100" Margin="2" VerticalAlignment="Stretch" Grid.Column="1" Click="TCPView" Text="TCP/IP" FontWeight="Bold" FontSize="18"  Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
        </StackPanel>
        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="#FF383838">
            <Canvas Name="COMCanvas" Visibility="Hidden">
                <Label Content="串口号:" VerticalContentAlignment="Center" Foreground="#FFFAFAFA" Canvas.Left="48" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="112"/>
                <Controls:ComboBox x:Name="COMDeviceList" PanelWidth="{Binding ElementName=COMDeviceList,Path=ActualWidth}" TextAreaRatio="0.7" ImagePlace="Right" IconMargin="10" Click="RefreshCOMPort" HorizontalAlignment="Left" Height="40" VerticalAlignment="Center" Width="112" Canvas.Left="110" Canvas.Top="107" Background="#FF4D4D4D" PanelBackground="#FF1A1A1A" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png">
                    <Controls:ComboBox.TemplateButton>
                        <Controls:DecoratedButton Background="#FF4D4D4D" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0"/>
                    </Controls:ComboBox.TemplateButton>
                </Controls:ComboBox>
                <Controls:DecoratedButton Click="ConnectCOM" Text="连接" FontWeight="Bold" FontSize="14" Width="156" Height="38" Canvas.Left="166" Background="#FF4D4D4D" Foreground="LightGray" MoveInColor="#FF545454" PressedColor="#FF4C4C4C" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="182" Grid.Row="3"/>
                <Label x:Name="COMConnectSucceed" Content="连接成功" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" FontWeight="Bold" FontSize="17" Canvas.Left="339" Canvas.Top="182" Height="38" Width="94" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF24B000"/>
                <Label x:Name="COMConnectFalse" Content="连接失败" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Visibility="Hidden" FontWeight="Bold" FontSize="17" Canvas.Left="339" Canvas.Top="182" Height="38" Width="94" Foreground="#FFE22D2D" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox x:Name="BaudRate" Height="42" Width="112" BorderThickness="0" FontSize="15" Text="9600" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Left="323" Canvas.Top="107" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FF4D4D4D" Foreground="#FFF0F0F0" Grid.Row="3"/>
                <Label Content="  波特率：" VerticalContentAlignment="Center" Foreground="#FFFAFAFA" Canvas.Left="248" Height="30" Canvas.Top="115" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label Content="设备类型:" VerticalContentAlignment="Center" Foreground="#FFFAFAFA" Canvas.Left="48" Height="30" Canvas.Top="40" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Controls:ComboBox x:Name="COMDeviceTypeList" PanelWidth="{Binding ElementName=COMDeviceTypeList, Path=ActualWidth}" TextAreaRatio="0.8" ImagePlace="Right" IconMargin="13" Height="40" Width="312" Canvas.Left="123" Canvas.Top="35" Background="#FF4D4D4D" PanelBackground="#FF1A1A1A" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Controls:ComboBox.TemplateButton>
                        <Controls:DecoratedButton Background="#FF4D4D4D" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0"/>
                    </Controls:ComboBox.TemplateButton>
                </Controls:ComboBox>
            </Canvas>
            <Canvas x:Name="USBCanvas" Visibility="Hidden">
                <Label Content="设备列表:" VerticalContentAlignment="Center" Foreground="#FFFAFAFA" Canvas.Left="36" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="113"/>
                <Controls:ComboBox x:Name="USBDeviceList" PanelWidth="{Binding ElementName=USBDeviceList, Path=ActualWidth}" TextAreaRatio="0.8" ImagePlace="Right" IconMargin="13" Click="RefreshUSBPort" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="327" Canvas.Left="118" Canvas.Top="108" Background="#FF4D4D4D" PanelBackground="#FF1A1A1A" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png">
                    <Controls:ComboBox.TemplateButton>
                        <Controls:DecoratedButton Background="#FF4D4D4D" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0"/>
                    </Controls:ComboBox.TemplateButton>
                </Controls:ComboBox>
                <Label x:Name="USBConnectSucceed" Visibility="Hidden" Content="连接成功" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"  FontWeight="Bold" FontSize="17" Canvas.Left="339" Canvas.Top="182" Height="38" Width="94" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FF24B000"/>
                <Label x:Name="USBConnectFalse" Visibility="Hidden" Content="连接失败" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="17" Canvas.Left="339" Canvas.Top="182" Height="38" Width="94" Foreground="#FFE22D2D" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Controls:DecoratedButton Click="ConnectUSB" Text="连接" FontWeight="Bold" FontSize="14" Width="156" Height="38" Canvas.Left="166" Background="#FF4D4D4D" Foreground="LightGray" MoveInColor="#FF545454" PressedColor="#FF4C4C4C" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Top="182" Grid.Row="3"/>
                <Label Content="设备类型:" VerticalContentAlignment="Center" Foreground="#FFFAFAFA" Canvas.Left="36" Height="30" Canvas.Top="42" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <Controls:ComboBox x:Name="USBDeviceTypeList" PanelWidth="{Binding ElementName=USBDeviceTypeList, Path=ActualWidth}" TextAreaRatio="0.8" ImagePlace="Right" IconMargin="13" Height="40" Width="327" Canvas.Left="118" Canvas.Top="37" Background="#FF4D4D4D" PanelBackground="#FF1A1A1A" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Controls:ComboBox.TemplateButton>
                        <Controls:DecoratedButton Background="#FF4D4D4D" Foreground="#FFF0F0EC" MoveInForeground="#FFEAEAEA" PressedForeground="#FFF0F0F0"/>
                    </Controls:ComboBox.TemplateButton>
                </Controls:ComboBox>
            </Canvas>
            <Canvas x:Name="TCPCanvas">
            </Canvas>
        </Grid>
    </Grid>
</Window>
