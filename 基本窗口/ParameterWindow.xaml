<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ODMR_Lab.基本窗口"
        xmlns:Controls="clr-namespace:Controls;assembly=Controls" x:Class="ODMR_Lab.基本窗口.ParameterWindow"
        mc:Ignorable="d"
        Title="ParameterWindow" Height="450" Width="800"  BorderThickness="2" WindowStyle="None" ResizeMode="NoResize" Background="#FF1F1F1F" MouseMove="Window_MouseMove" BorderBrush="#FF0075DA">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label Background="#FF383838" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="     设备参数" Foreground="#FFF6E8E8"/>
        <Controls:DecoratedButton Grid.Row="0" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" x:Name="CloseBtn" Click="Close" Text="×" FontWeight="Thin" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
        <Controls:DecoratedButton Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" Height="40" Click="Apply" Text="应用更改" FontSize="16" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray"/>
        <Controls:AutoScrollViewer Name="viewer" Grid.Column="1" Grid.Row="2" Background="#FF383838">
            <Controls:AutoScrollViewer.Content>
                <WrapPanel Name="paramsPanel" ItemWidth="{Binding ElementName=viewer, Path=ActualWidth}" Width="{Binding ElementName=viewer, Path=ActualWidth}">
                </WrapPanel>
            </Controls:AutoScrollViewer.Content>
        </Controls:AutoScrollViewer>
        <Controls:DecoratedButton Name="ButtonTemplate" Visibility="Collapsed" ImagePlace="Right" IconMargin="10" Width="200" TextAreaRatio="0.7" Height="111" Background="#FF4D4D4D" MoveInColor="#FF989898" PressedColor="#FF5D5D5D" Foreground="White" PressedForeground="White" MoveInForeground="White" IconSource="/图片资源/downArrow.png"/>
        <Controls:FontChangeText Name="TextTemplate" Width="100" Height="40" BorderThickness="0">
            <Controls:FontChangeText.InnerTextBox>
                <TextBox Background="#FF4D4D4D" Text="111" Visibility="Collapsed" BorderThickness="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" CaretBrush="White" Foreground="White"/>
            </Controls:FontChangeText.InnerTextBox>
        </Controls:FontChangeText>

    </Grid>
</Window>
