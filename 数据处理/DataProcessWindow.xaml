<Window x:Class="ODMR_Lab.数据处理.DataProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ODMR_Lab.数据处理" xmlns:control="clr-namespace:Controls;assembly=Controls" xmlns:基本控件="clr-namespace:ODMR_Lab.基本控件"
        mc:Ignorable="d"
        Title="数据处理窗口" Height="500" Width="1000" WindowChrome.IsHitTestVisibleInChrome="False" BorderThickness="2" ResizeMode="NoResize" WindowStyle="None" Background="#FF1F1F1F" BorderBrush="#FF0075DA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="60"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Content="       数据处理窗口" IsHitTestVisible="False" Grid.ColumnSpan="1" FontWeight="ExtraBold" Background="#FF383838" Foreground="#FFFAFAFA"/>
        <control:DecoratedButton Grid.Column="3" IconMargin="7" TextAreaRatio="0" Grid.Row="0" HorizontalAlignment="Stretch" Click="Close" VerticalAlignment="Stretch" FontWeight="Thin" FontSize="20" Canvas.Left="1126" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/close.png"/>
        <control:DecoratedButton Grid.Column="1" IconMargin="7" TextAreaRatio="0" Grid.Row="0" Click="Minimize" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IconSource="/图片资源/minimize.png" />
        <control:DecoratedButton Grid.Column="2" IconMargin="7" TextAreaRatio="0" Grid.Row="0" Click="Maximize" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IconSource="/图片资源/maximize.png"/>
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <control:ListViewer Name="DataList" MinItemWidth="200" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" ItemBarBackground="#FF2E2E2E" ItemBarSelectedColor="#FF0095FF" Background="#FF1A1A1A">
                <control:ListViewer.DataTemplate>
                    <control:ViewerTemplate Descriptions="名称" DataDisplayWidth="*" DataType="String" Editable="False"/>
                    <control:ViewerTemplate Descriptions="变量名" DataDisplayWidth="100" DataType="String" Editable="False"/>
                    <control:ViewerTemplate Descriptions="数据量" DataDisplayWidth="100" DataType="String" Editable="False"/>
                </control:ListViewer.DataTemplate>
                <control:ListViewer.HeaderLabelTemplate>
                    <Label Foreground="White" Background="#FF1A1A1A" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="14"/>
                </control:ListViewer.HeaderLabelTemplate>
                <control:ListViewer.UnEditableTextTemplate>
                    <TextBlock Foreground="White" Background="#FF1A1A1A" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
                </control:ListViewer.UnEditableTextTemplate>
            </control:ListViewer>
            <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="1">
                <基本控件:DataListViewer x:Name="DataListView"/>
            </Grid>

            <Grid  Grid.Row="0" Grid.RowSpan="3" Grid.Column="2" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Label Content="处理面板" Grid.ColumnSpan="3" Grid.Row="0" IsHitTestVisible="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FFFAFAFA"/>
                <Label Content="简单映射计算" Grid.ColumnSpan="2" Grid.Row="1" IsHitTestVisible="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FFFAFAFA"/>
                <control:DecoratedButton Grid.Column="2" TextAreaRatio="0" Grid.Row="1" Click="ShowSimpleMappingInformation" FontSize="20" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/information.png" Margin="10"/>
                <control:AlgebraBox Name="SimpleMappingBox" Grid.Row="2" Grid.ColumnSpan="3" FontSize="12" Background="#FF2E2E2E" Margin="5" TipBarBackground="#FF4D4D4D" TipBarSelectedColor="#FF0075DA" TipDiscriptionColor="White" Foreground="White" CaretColor="White"/>
                <Label Grid.ColumnSpan="1" Content="数据分组" Grid.Row="4" IsHitTestVisible="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FFFAFAFA"/>
                <control:ComboBox Name="GroupName" Click="UpdateGroup" Margin="5" TextAreaRatio="0.9" IconMargin="2" ImagePlace="Right" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Background="#FF424242" PressedColor="#FF3E3E3E" PressedForeground="White" MoveInForeground="White" Foreground="White" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png"/>
                <control:DecoratedButton Name="D1CalcBtn" Margin="5" Grid.Column="0" TextAreaRatio="1" Text="计算并添加" FontSize="12" Grid.ColumnSpan="3" Grid.Row="6" Click="Calculate1DSimpleMapping" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/information.png"/>
                <TextBox x:Name="D1DataName" Height="30" Grid.Row="3" Text="" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White" Grid.Column="1" Grid.ColumnSpan="2" Margin="2"/>
                <Label Grid.ColumnSpan="1" Content="新数据集名称" Grid.Row="3" IsHitTestVisible="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FFFAFAFA"/>
                <Label Grid.ColumnSpan="1" Content="数据类型" Grid.Row="5" IsHitTestVisible="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="{x:Null}" Foreground="#FFFAFAFA"/>
                <control:ComboBox x:Name="DataType" DefaultSelectIndex="0" Margin="5,5,5,5" TextAreaRatio="0.9" IconMargin="2" ImagePlace="Right" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Background="#FF424242" PressedColor="#FF3E3E3E" PressedForeground="White" MoveInForeground="White" Foreground="White" MoveInColor="#FF4D4D4D" IconSource="/图片资源/downArrow.png">
                    <control:ComboBox.Items>
                        <control:DecoratedButton Text="X" Background="#FF383838" PressedColor="#FF3E3E3E" PressedForeground="White" MoveInForeground="White" Foreground="White" MoveInColor="#FF4D4D4D"/>
                        <control:DecoratedButton Text="Y" Background="#FF383838" PressedColor="#FF3E3E3E" PressedForeground="White" MoveInForeground="White" Foreground="White" MoveInColor="#FF4D4D4D"/>
                        <control:DecoratedButton Text="XY" Background="#FF383838" PressedColor="#FF3E3E3E" PressedForeground="White" MoveInForeground="White" Foreground="White" MoveInColor="#FF4D4D4D"/>
                    </control:ComboBox.Items>
                </control:ComboBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
