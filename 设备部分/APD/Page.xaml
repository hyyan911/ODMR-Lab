<odmr_lab:DevicePageBase  xmlns:odmr_lab="clr-namespace:ODMR_Lab.设备部分" x:Class="ODMR_Lab.设备部分.光子探测器.DevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:chart="clr-namespace:Controls.Charts;assembly=Controls" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="60"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <control:ListViewer Name="APDList" Grid.Column="0" Margin="10" Grid.RowSpan="1" ItemContextMenuSelected="ContextMenuEvent" ItemBarBackground="#FF4D4D4D" Background="#FF2E2E2E" ItemBarSelectedColor="#FF2470FC">
            <control:ListViewer.ItemContextMenu>
                <control:ContextMenu>
                    <control:ContextMenu.Items>
                        <control:DecoratedButton Text="关闭设备" FontSize="12" Background="#FF4D4D4D" MoveInColor="#FF358EFF" PressedColor="#FF0082DA" Foreground="White" MoveInForeground="White" PressedForeground="White"/>
                        <control:DecoratedButton Text="参数设置" FontSize="12" Background="#FF4D4D4D" MoveInColor="#FF358EFF" PressedColor="#FF0082DA" Foreground="White" MoveInForeground="White" PressedForeground="White"/>
                    </control:ContextMenu.Items>
                </control:ContextMenu>
            </control:ListViewer.ItemContextMenu>
            <control:ListViewer.DataTemplate>
                <control:ViewerTemplate Descriptions="APD列表" DataDisplayWidth="*" DataType="String" Editable="False"/>
            </control:ListViewer.DataTemplate>
            <control:ListViewer.HeaderLabelTemplate>
                <Label Grid.Row="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" FontSize="14" FontWeight="Bold" Foreground="#FFFAFAFA" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FF1A1A1A"/>
            </control:ListViewer.HeaderLabelTemplate>
            <control:ListViewer.UnEditableTextTemplate>
                <TextBlock Foreground="White" Background="#FF1A1A1A" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="11"/>
            </control:ListViewer.UnEditableTextTemplate>
            <control:ListViewer.EditableBooleanTemplate>
                <control:Chooser Width="40" Height="20"/>
            </control:ListViewer.EditableBooleanTemplate>
        </control:ListViewer>
        <control:DecoratedButton Grid.Row="1" Grid.Column="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="NewAPDConnect" Text="新建连接" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <TextBlock FontWeight="Bold" Name="CountRate" Text="12304567" FontSize="35" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="LightGreen"/>
    </Grid>
    <Grid Grid.Column="1" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Grid.Column="0" Content="测量源"/>
        <control:ComboBox Name="APDDevice" FontSize="11" Height="30" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Background="#FF2E2E2E" Margin="5" ImagePlace="Right" Click="UpdateDeviceList" IconMargin="7" TextAreaRatio="0.9" IconSource="/图片资源/downArrow.png" Foreground="White" MoveInForeground="#FF4D4D4D" PressedForeground="White" PressedColor="#FF2E2E2E"/>
        <control:DecoratedButton Name="BeginBtn" Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="StartAPDSample" Text="开始测量" FontWeight="Thin" FontSize="12" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <control:DecoratedButton Name="EndBtn" IsEnabled="False" Grid.Row="0" Grid.Column="6" Grid.ColumnSpan="1" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="EndAPDSample" Text="停止测量" FontWeight="Thin" FontSize="12" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Grid.Column="0" Grid.Row="1" Content="最大储存点数"/>
        <TextBox x:Name="MaxSavePoint" Grid.Column="1" FontSize="12" Grid.Row="1" Margin="5" Text="100000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Grid.Column="2" Grid.Row="1" Content="最大显示点数"/>
        <Label Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Grid.Row="1" Grid.Column="4" Content="采样频率(Hz):"/>
        <TextBox x:Name="MaxDisplayPoint" Grid.Column="3" FontSize="12" Grid.Row="1" Margin="5" Text="1000" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White"/>
        <TextBox x:Name="SampleFreq" Grid.Column="5" Grid.Row="1" Margin="5" Text="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White"/>
        <chart:ChartControl Name="Chart" Grid.Row="2" Grid.ColumnSpan="7" Grid.Column="0" SnapsToDevicePixels="True" HorizontalAlignment="Stretch" Title="计数曲线" XAxisName="序号" TitleFontsize="20" AxisFontsize="13" YAxisName="计数率(cps)" VerticalAlignment="Stretch" LegendFontsize="20" LegendHAlignment="Right" LegendVAlignment="Top" MajorGridThickness="1" GridLineNumber="8" AxisMajorTickColor="Transparent" AxisMinorTickColor="Transparent" PanY="False" MinorGridThickness="0" Zoom="True" ChartBackground="#FF1F1F1F" DataAreaBackground="#FF1F1F1F" MajorGridColor="#FF888A85" MinorGridColor="#FF7C7C7C" EdgeColor="Transparent" LegendBackground="#FF4D4D4D" LegendForeground="#FFFAFAFA"/>
        <control:DecoratedButton Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" ToolTip="复制图片到剪切板" IconMargin="7" Margin="8" TextAreaRatio="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Snap" Text="开始测量" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/snap.png"/>
        <control:DecoratedButton Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="3" ToolTip="保存数据" IconMargin="7" Margin="8" TextAreaRatio="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="SaveFile" Text="停止测量" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA" IconSource="/图片资源/save.png"/>
        <control:DecoratedButton Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="1" Margin="5,5,5,5" Click="Apply" Text="应用" FontWeight="Thin" FontSize="12" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
    </Grid>
</odmr_lab:DevicePageBase>
