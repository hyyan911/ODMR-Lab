<odmr_lab:PageBase  xmlns:odmr_lab="clr-namespace:ODMR_Lab" x:Class="ODMR_Lab.数据记录.ExtPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:control="clr-namespace:Controls;assembly=Controls" xmlns:pythonhandler="clr-namespace:PythonHandler;assembly=PythonHandler" xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:界面及子窗口="clr-namespace:ODMR_Lab.扩展部分.数据记录.界面及子窗口"
                    mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid.RowDefinitions>
        <RowDefinition Height="50"/>
        <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
        <Label Content="记录本文件夹路径:" Foreground="White" VerticalContentAlignment="Center" Margin="5"/>
        <TextBlock Name="AssembleFolderPath" Foreground="White" VerticalAlignment="Center" Margin="5"/>
        <control:DecoratedButton Margin="10" Click="GetAssembleFolderPath" TextAreaRatio="0" ToolTip="浏览路径" IconSource="/图片资源/directory.png" IconMargin="5" Width="70" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <control:DecoratedButton Margin="10" Click="ReLoad" ToolTip="重新加载目录下的所有记录本" TextAreaRatio="0" IconSource="/图片资源/refresh.png" IconMargin="5" Width="70" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <control:DecoratedButton Margin="10" Click="AddAssemble" ToolTip="新建记录本" TextAreaRatio="1" Text="新建记录本" IconMargin="5" Width="100" FontWeight="Thin" FontSize="12" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <control:DecoratedButton Margin="10" Click="ChangeAssemble" ToolTip="修改当前记录本" TextAreaRatio="1" Text="修改当前记录本" IconMargin="5" Width="100" FontWeight="Thin" FontSize="12" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        <control:DecoratedButton Margin="10" Click="SettingWindow" ToolTip="设置" TextAreaRatio="0" IconSource="/图片资源/setting.png" IconMargin="5" Width="70" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
    </StackPanel>
    <local:TabPanel x:Name="AssembleTab" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2" TabClicked="AssembleTab_TabClicked">
        <local:TabPanel.ContentPanel>
            <界面及子窗口:NoteControl/>
        </local:TabPanel.ContentPanel>
    </local:TabPanel>
</odmr_lab:PageBase>
