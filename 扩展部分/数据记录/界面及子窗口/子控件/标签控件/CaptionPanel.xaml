<标签控件:TagPanelBase  xmlns:标签控件="clr-namespace:ODMR_Lab.扩展部分.数据记录" x:Class="ODMR_Lab.扩展部分.数据记录.界面及子窗口.CaptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" Margin="3"
            >
    <标签控件:TagPanelBase.RowDefinitions>
        <RowDefinition Height="*"/>
    </标签控件:TagPanelBase.RowDefinitions>
    <标签控件:TagPanelBase.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="40"/>
        <ColumnDefinition Width="20" Name="LockColumn"/>
    </标签控件:TagPanelBase.ColumnDefinitions>
    <StackPanel Orientation="Horizontal">
        <Label Name="CaptionLabel" Width="60" Foreground="White" Content="标题内容:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Visibility="Visible" MinWidth="50" Name="CaptionContent" Grid.Column="1" BorderThickness="0" Text="test" BorderBrush="Transparent" Foreground="White" Padding="5" Background= "Transparent" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" CaretBrush="White"/>
        <Label Name="ContentLabel" Width="60" Foreground="White" Grid.Column="2" Content="内容:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Visibility="Visible" MinWidth="50" Name="StringContent" Grid.Column="3" BorderThickness="0" Text="test" BorderBrush="Transparent" Foreground="White" Padding="5" Background= "Transparent" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" CaretBrush="White"/>
    </StackPanel>
    <control:DecoratedButton Name="ColorBtn" Grid.Column="1" Click="ColorSelectorClicked" Grid.RowSpan="2" FontSize="20" Background="Transparent" Text="■" Height="30" Width="30" MoveInColor="#FF424242" PressedColor="#FF0066FF"/>
    <Image Name="LockImage" Source="/图片资源/lock.png" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="2"/>
</标签控件:TagPanelBase>
