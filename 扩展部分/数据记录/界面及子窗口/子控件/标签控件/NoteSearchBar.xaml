<Grid  xmlns:标签控件="clr-namespace:ODMR_Lab.扩展部分.数据记录" x:Class="ODMR_Lab.扩展部分.数据记录.界面及子窗口.NoteSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" Margin="3" Width="300"
            >
    <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="70"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="30"/>
    </Grid.ColumnDefinitions>
    <Label Foreground="White" Content="搜索内容：" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    <Label Foreground="White" Content="搜索标签：" Grid.Row="1" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    <TextBox Name="TitleInput" PreviewKeyDown="TitleInput_PreviewKeyDown" Margin="2" CaretBrush="White" Grid.Column="1" Foreground="White" BorderThickness="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Background="#FF4D4D4D"/>
    <control:DecoratedButton TextAreaRatio="0" Click="SearchTitle" Grid.Column="2" Margin="2" IconMargin="3" IconSource="/图片资源/search.png" Background="#FF2E2E2E" Foreground="#FFFAFAFA" MoveInColor="#FF1792E5" PressedColor="#FF0088D9" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
    <control:SearchBar Name="TagSearcher" ResultSelected="TagSearcher_ResultSelected" ValidateResultWhenTextChanged="True" Grid.Row="1" ResultBarHeight="50" DisplayResultNumber="10" Grid.Column="1" Grid.ColumnSpan="2">
        <control:SearchBar.TextBoxTemplate>
            <TextBox Margin="2" CaretBrush="White" Foreground="White" BorderThickness="0" Background="#FF4D4D4D"/>
        </control:SearchBar.TextBoxTemplate>
        <control:SearchBar.SearchButtonTemplate>
            <control:DecoratedButton TextAreaRatio="0" Margin="2" IconMargin="3" IconSource="/图片资源/search.png" Background="#FF2E2E2E" Foreground="#FFFAFAFA" MoveInColor="#FF1792E5" PressedColor="#FF0088D9" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        </control:SearchBar.SearchButtonTemplate>
        <control:SearchBar.ResultBoxTemplate>
            <control:DecoratedButton FontSize="12" Background="#FF2E2E2E" Foreground="#FFFAFAFA" MoveInColor="#FF1792E5" PressedColor="#FF0088D9" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
        </control:SearchBar.ResultBoxTemplate>
    </control:SearchBar>
</Grid>
