<标签控件:TagPanelBase  xmlns:标签控件="clr-namespace:ODMR_Lab.扩展部分.数据记录" x:Class="ODMR_Lab.扩展部分.数据记录.界面及子窗口.OptionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" Margin="3">
    <标签控件:TagPanelBase.RowDefinitions>
        <RowDefinition Name="CaptionRow" Height="30"/>
        <RowDefinition Height="*"/>
        <RowDefinition Name="AddRow" Height="50"/>
    </标签控件:TagPanelBase.RowDefinitions>
    <标签控件:TagPanelBase.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition Width="40"/>
        <ColumnDefinition Width="40"/>
        <ColumnDefinition Width="20" Name="LockColumn"/>
    </标签控件:TagPanelBase.ColumnDefinitions>
    <StackPanel Grid.ColumnSpan="4" VerticalAlignment="Center" Orientation="Horizontal">
        <Label Content="标题：" Name="TitleLabel" Foreground="White" FontSize="13"/>
        <TextBox Name="TitleBox" MinWidth="100" BorderThickness="0" Grid.Row="0" VerticalAlignment="Center" FontSize="13" Text="1" VerticalContentAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" CaretBrush="White"/>
    </StackPanel>
    <Image Name="LockImage" Source="/图片资源/lock.png" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    <control:DecoratedButton Name="ColorBtn" Grid.Column="2" Grid.Row="1" Click="ColorSelectorClicked" Grid.RowSpan="2" Background="Transparent" FontSize="20" Text="■" Height="30" Width="30" MoveInColor="#FF424242" PressedColor="#FF0066FF"/>
    <StackPanel Name="OptionDisplayPanel" Grid.Row="1" Grid.ColumnSpan="1" Margin="3" Orientation="Vertical" HorizontalAlignment="Stretch">
    </StackPanel>
    <TextBox Visibility="Collapsed" Name="TextBoxTemplate" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Foreground="White" Padding="5" Text="12123111111111111111111111111112121121" TextWrapping="Wrap" HorizontalAlignment="Stretch" VerticalAlignment="Center" CaretBrush="White"/>
    <control:DecoratedButton Name="Addbtn" Grid.Column="0" Grid.Row="2" Margin="10" Click="AddOption" Text="+" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
    <Grid Grid.Row="1" Grid.Column="1" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <control:Chooser IsHitTestVisible="False" Name="IsMultiSelection" HasAnimation="False" Selected="MultiSelectionChanged" UnSelected="MultiSelectionChanged"  Grid.Column="1" Grid.Row="1" Width="20" Height="10"/>
        <Label Content="多选" Grid.Row="0" Foreground="White" FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</标签控件:TagPanelBase>
