    <Label Foreground="White" Grid.Column="0" Content="标签内容:" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    <Image Name="LockImage" Source="/图片资源/lock.png" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Column="3"/>
</标签控件:TagPanelBase>
