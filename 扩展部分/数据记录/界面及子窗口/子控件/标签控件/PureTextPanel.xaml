<标签控件:TagPanelBase xmlns:标签控件="clr-namespace:ODMR_Lab.扩展部分.数据记录" x:Class="ODMR_Lab.扩展部分.数据记录.界面及子窗口.PureTextPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" Margin="3"
            >
    <标签控件:TagPanelBase.RowDefinitions>
        <RowDefinition Height="*"/>
    </标签控件:TagPanelBase.RowDefinitions>
    <标签控件:TagPanelBase.ColumnDefinitions>
        <ColumnDefinition Width="60"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="50"/>
        <ColumnDefinition Name="LockColumn" Width="20"/>
    </标签控件:TagPanelBase.ColumnDefinitions>
