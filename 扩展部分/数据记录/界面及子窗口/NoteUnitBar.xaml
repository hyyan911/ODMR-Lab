<Grid x:Class="ODMR_Lab.扩展部分.数据记录.界面及子窗口.NoteUnitBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件" xmlns:control="clr-namespace:Controls;assembly=Controls"
      mc:Ignorable="d" 
              MinHeight="50" Margin="4">
    <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="30"/>
        <RowDefinition Name="TimeRow" Height="30"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Name="FileColumn" Width="30"/>
    </Grid.ColumnDefinitions>
    <TextBox Name="Description" Background="Transparent" HorizontalAlignment="Left" BorderThickness="0" BorderBrush="Transparent" IsReadOnly="True" FontWeight="Normal" FontSize="14" Foreground="White" Text="" VerticalAlignment="Center" TextWrapping="Wrap" Margin="10"/>
    <Grid Grid.Column="1" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/图片资源/attach.png" Margin="2" Width="20" Height="20"/>
        <Label Name="FileCount" Content="11" Grid.Row="1" Foreground="#FF0599C2" FontWeight="Bold" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
    <control:AutoScrollViewer Grid.Row="1" Grid.ColumnSpan="2" Margin="3" HorizontalScrollBarVisibility="Hidden" MouseWheelScrollEnabled="True" VerticalScrollBarVisibility="Disabled">
            <control:AutoScrollViewer.Content>
                <WrapPanel Orientation="Horizontal" Name="TagPanel"/>
            </control:AutoScrollViewer.Content>
        </control:AutoScrollViewer>
    <TextBox IsReadOnly="True" Background="Transparent" BorderThickness="0" BorderBrush="Transparent" Name="Time" FontSize="12" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Right" HorizontalContentAlignment="Right" FontWeight="Bold" Foreground="#FFC06A11" VerticalContentAlignment="Center"/>
    <control:DecoratedButton Name="template" Visibility="Hidden" Grid.Column="0" Grid.Row="2" Margin="5" Text="新建记录" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="#FFFAFAFA" MoveInColor="#FF424242" PressedColor="#FF0066FF" MoveInForeground="#FFFAFAFA" PressedForeground="#FFFAFAFA"/>
</Grid>
