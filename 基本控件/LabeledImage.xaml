<Grid x:Class="ODMR_Lab.基本控件.LabeledImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="Grid_Loaded" SizeChanged="UpdateCursorLocations" SnapsToDevicePixels="True">
    <Image Name="DisplayArea" IsHitTestVisible="True" SnapsToDevicePixels="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stretch="Uniform"/>
    <Canvas Name="DrawingPanel" Width="{Binding ElementName=DisplayArea,Path=ActualWidth}" Height="{Binding ElementName=DisplayArea,Path=ActualHeight}"/>
</Grid>
