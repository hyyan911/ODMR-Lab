<Grid xmlns:odmr_lab="clr-namespace:ODMR_Lab" x:Class="ODMR_Lab.基本控件.ChartViewer1D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ODMR_Lab.基本控件"
             xmlns:chart="clr-namespace:Controls.Charts;assembly=Controls"
             xmlns:scroll="clr-namespace:Controls;assembly=Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" ClipToBounds="False">
    <Grid.RowDefinitions>
        <RowDefinition MinHeight="300"/>
        <RowDefinition Height="50"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition MinWidth="300" Width="3*"/>
        <ColumnDefinition Width="50"/>
        <ColumnDefinition MinWidth="100" Width="1*"/>
    </Grid.ColumnDefinitions>
    <chart:ChartControl Name="chart" SnapsToDevicePixels="True" MouseMove="chart_MouseMove" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="0" Grid.Column="0" LegendFontsize="20" LegendHAlignment="Right" LegendVAlignment="Top" MajorGridThickness="1" GridLineNumber="8" AxisFontsize="16" AxisMajorTickColor="Transparent" AxisMinorTickColor="Transparent" PanY="False" MinorGridThickness="0" ZoomY="True" ChartBackground="#FF1F1F1F" DataAreaBackground="#FF1F1F1F" MajorGridColor="#FF888A85" MinorGridColor="#FF7C7C7C" EdgeColor="Transparent" LegendBackground="#FF4D4D4D" LegendForeground="#FFFAFAFA"/>
    <Grid Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label HorizontalContentAlignment="Center" Grid.Row="0" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Content="X数据"/>
        <Label HorizontalContentAlignment="Center" Grid.Row="2" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Content="Y数据"/>
        <scroll:AutoScrollViewer Name="xscroll" Grid.Row="1">
            <scroll:AutoScrollViewer.Content>
                <WrapPanel Name="XDataSet" Width="{Binding ElementName=xscroll, Path=ActualWidth}" ItemWidth="{Binding ElementName=xscroll, Path=ActualWidth}"/>
            </scroll:AutoScrollViewer.Content>
        </scroll:AutoScrollViewer>
        <scroll:AutoScrollViewer Name="yscroll" Grid.Row="3">
            <scroll:AutoScrollViewer.Content>
                <WrapPanel Name="YDataSet" Width="{Binding ElementName=yscroll, Path=ActualWidth}" ItemWidth="{Binding ElementName=xscroll, Path=ActualWidth}"/>
            </scroll:AutoScrollViewer.Content>
        </scroll:AutoScrollViewer>
    </Grid>
    <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <scroll:DecoratedButton Margin="7" Click="ResizePlot" Grid.Row="1" Grid.Column="0" TextAreaRatio="0" IconMargin="4" ToolTip="缩放至初始尺寸" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/resize.png"/>
        <scroll:DecoratedButton Margin="7" Click="Snap" Grid.Row="0" Grid.Column="0" TextAreaRatio="0" IconMargin="4" ToolTip="复制截图到剪切板" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/snap.png"/>
        <scroll:DecoratedButton Margin="7" Click="SaveAsExternal" Grid.Row="2" Grid.Column="0" TextAreaRatio="0" IconMargin="4" ToolTip="保存为文件" FontWeight="Thin" FontSize="14" Background="#FF383838" Foreground="LightGray" MoveInColor="#FF424242" PressedColor="#FF39393A" MoveInForeground="LightGray" PressedForeground="LightGray" IconSource="/图片资源/save.png"/>
    </Grid>
    <scroll:AutoScrollViewer Grid.Row="1" Grid.Column="0">
        <scroll:AutoScrollViewer.Content>
            <WrapPanel Orientation="Horizontal">
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Margin="10" Content="曲线类型" Width="80"/>
                <scroll:ComboBox Name="PlotStyle" DefaultSelectIndex="0" SelectionChanged="ApplyLineStyle" Width="80" Height="30" Margin="5" PanelWidth="60" TextAreaRatio="0.8" IconMargin="2" ImagePlace="Right" Background="#FF383838" MoveInColor="#FF4D4D4D" PressedColor="#FF2E2E2E" IconSource="/图片资源/downArrow.png" Foreground="White" MoveInForeground="White" PressedForeground="White">
                    <scroll:ComboBox.Items>
                        <scroll:DecoratedButton Height="40" Text="线状图" Background="#FF383838" MoveInColor="#FF4D4D4D" PressedColor="#FF007AD9" Foreground="White" MoveInForeground="White" PressedForeground="White"/>
                        <scroll:DecoratedButton Height="40" Text="点状图" Background="#FF383838" MoveInColor="#FF4D4D4D" PressedColor="#FF007AD9" Foreground="White" MoveInForeground="White" PressedForeground="White"/>
                        <scroll:DecoratedButton Height="40" Text="点线图" Background="#FF383838" MoveInColor="#FF4D4D4D" PressedColor="#FF007AD9" Foreground="White" MoveInForeground="White" PressedForeground="White"/>
                    </scroll:ComboBox.Items>
                </scroll:ComboBox>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Margin="10" Content="线宽:" Width="60"/>
                <TextBox x:Name="LineWidth" Text="1" LostFocus="ApplyLineStyle" KeyDown="ApplyLineStyleKey" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White" Height="30" Width="70"/>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Margin="10" Content="平滑曲线:" Width="80"/>
                <scroll:Chooser Name="IsSmooth" Width="40" Selected="ApplyLineStyle" UnSelected="ApplyLineStyle" Height="20" Margin="10"/>
                <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="14" Margin="10" Content="点尺寸:" Width="60"/>
                <TextBox x:Name="PointSize" Text="1" KeyDown="ApplyLineStyleKey" LostFocus="ApplyLineStyle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" BorderThickness="0" Background="#FF424242" BorderBrush="{x:Null}" Foreground="White" Height="30" Width="70"/>
            </WrapPanel>
        </scroll:AutoScrollViewer.Content>
    </scroll:AutoScrollViewer>
</Grid>
